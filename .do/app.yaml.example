name: round
services:
- name: round-app
  source_dir: /
  github:
    repo: bbarnes4318/round
    branch: main
  run_command: npm start
  build_command: npm run build
  environment_slug: node-js
  instance_count: 1
  instance_size_slug: basic-xxs
  health_check:
    http_path: /health
    initial_delay_seconds: 10
    interval_seconds: 30
    timeout_seconds: 10
    unhealthy_threshold: 3
    healthy_threshold: 2
  envs:
  - key: NODE_ENV
    value: production
  - key: PORT
    value: "8080"
  - key: GOOGLE_SHEETS_ID
    value: "your_actual_sheet_id"
  - key: GOOGLE_PROJECT_ID
    value: "your_actual_project_id"
  - key: GOOGLE_CLIENT_EMAIL
    value: "your_service_account@project.iam.gserviceaccount.com"
  - key: GOOGLE_PRIVATE_KEY
    value: "-----BEGIN PRIVATE KEY-----\nYour actual private key here\n-----END PRIVATE KEY-----"
